set folder_format="%N %8s bytes - %d %f"
set pager_format="-%S- [%C/%m] %n (%c) %s"
set attribution='On %{%a, %d %b %Y [%H:%M]},\n    %n (%a) wrote:\n'
set status_format="-(New:%n)(Old:%o)(Del:%d)--(%f=)(Boxes:%b)%>-(%P)-"
folder-hook . 'set index_format="%3C %Z %[%b %d %H:%M] - %-22.22L (%3l) %s"'
folder-hook marp-scores 'set index_format="%3C %Z %[%b %d %H:%M] - %s"'
folder-hook mozilla 'set index_format="%3C %Z %[%b %d %H:%M] - %s"'
